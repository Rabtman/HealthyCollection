<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <ImageView
            android:id="@+id/card_img"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:scaleType="fitCenter"
            tools:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/card_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/card_img"
            android:layout_marginBottom="8dp"
            android:layout_toRightOf="@+id/card_img"
            android:maxLines="1"
            android:textColor="@color/sub_text"
            android:textSize="@dimen/caption"
            tools:text="凤凰网" />

        <TextView
            android:id="@+id/card_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/card_author"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:maxLines="1"
            android:textColor="@color/sub_text"
            android:textSize="@dimen/caption"
            tools:text="2014-10-12" />

        <TextView
            android:id="@+id/card_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/card_author"
            android:layout_alignLeft="@+id/card_author"
            android:layout_alignRight="@+id/card_date"
            android:layout_alignTop="@+id/card_img"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:maxLines="2"
            android:textColor="@color/colorText"
            android:textSize="@dimen/body"
            tools:text="哈哈哈哈哈哈哈哈\n哈哈哈哈哈哈哈" />
    </RelativeLayout>
</android.support.v7.widget.CardView>