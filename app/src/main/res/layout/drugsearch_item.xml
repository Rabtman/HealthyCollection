<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <ImageView
            android:id="@+id/card_img"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:scaleType="fitCenter"
            tools:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/card_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/card_date"
            android:layout_alignTop="@+id/card_img"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/card_img"
            android:maxLines="1"
            android:textColor="@color/colorText"
            android:textSize="@dimen/body"
            tools:text="酚氨咖敏片" />

        <TextView
            android:id="@+id/card_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/card_img"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:maxLines="1"
            android:textColor="@color/sub_text"
            android:textSize="@dimen/caption"
            tools:text="葵花药业集团(衡水)得菲尔有限公司" />

        <TextView
            android:id="@+id/card_use"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/card_company"
            android:layout_below="@id/card_name"
            android:layout_toRightOf="@+id/card_img"
            android:maxLines="2"
            android:textColor="@color/sub_text"
            android:textSize="@dimen/caption"
            tools:text="用于感冒发热、头痛、神经痛及风湿痛等。\n123123" />
    </RelativeLayout>
</android.support.v7.widget.CardView>